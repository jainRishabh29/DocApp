<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_appointment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Doctor"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/doctorc"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:layout_constraintBottom_toTopOf="@+id/LL1"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
              />

        <RelativeLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_radius"
                android:backgroundTint="#e2e3e3"
                android:hint="Search e.g. Dr. Louis "
                android:paddingLeft="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </EditText>

            <Button
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginRight="2dp"
                android:drawableTop="@drawable/ic_baseline_search_24"
                android:background="@drawable/search_button"
                app:backgroundTint="@null"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


    <!--    <SearchView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:background="@drawable/layout_input"-->
<!--        android:layout_marginLeft="12dp"-->
<!--        android:layout_marginRight="12dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/textView2" />-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LL1" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView3" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
       >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F74463FF"
            android:layout_margin="12dp"
            app:cardCornerRadius="18dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/brain"
                    android:layout_marginTop="6dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_brain" />

                <TextView
                    android:id="@+id/brainT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brain"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingLeft="26dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/brain" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ebeefe"
            android:layout_margin="12dp"
            app:cardCornerRadius="18dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/heart"
                    android:layout_marginTop="6dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_heart" />

                <TextView
                    android:id="@+id/heartT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:paddingLeft="26dp"
                    app:layout_constraintTop_toBottomOf="@+id/heart" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardBackgroundColor="#fff7eb"
            app:cardCornerRadius="18dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/kidney"
                    android:layout_marginTop="6dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_kidney" />

                <TextView
                    android:id="@+id/kidneyT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kidney"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:paddingLeft="22dp"
                    app:layout_constraintTop_toBottomOf="@+id/kidney" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

        </HorizontalScrollView>

    <TextView
        android:id="@+id/top_doctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Top Doctors"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollV" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_doctors">

        <androidx.cardview.widget.CardView
            android:id="@+id/clickableCard"
            app:cardBackgroundColor="#fff7eb"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            app:cardCornerRadius="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/doctor1img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:layout_margin="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doctorb" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/doctorSpec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cardiologist"
                    android:textSize="16dp"
                    android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/doctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr Michael Aaron"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#f2f5f8"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"

            android:layout_marginLeft="12dp"
            app:cardCornerRadius="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/doctor2img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doctora" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doctorSpec2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chiropractors"
                        android:textSize="16dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/doctorName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr Bonebrake"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            app:cardBackgroundColor="#f2f5f8"
            android:layout_marginLeft="12dp"
            app:cardCornerRadius="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/doctor3img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:layout_margin="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doctorc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doctorSpec3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anesthesiology"
                        android:textSize="16dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/doctorName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr Tranquilli"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>